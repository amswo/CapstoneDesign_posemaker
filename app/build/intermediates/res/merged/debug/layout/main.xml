<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ffffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:id="@+id/sdfsdffsd">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4.02"
                    android:layout_gravity="center">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="START"
                        android:id="@+id/btnStart"
                        android:layout_marginTop="37dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:id="@+id/btnHome"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email로 내보내기"
                        android:id="@+id/btnEmail"
                        android:layout_alignParentTop="true"
                        android:layout_alignRight="@+id/btnSelectAllDatas" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DB생성"
                        android:id="@+id/btnCreateDatabase"
                        android:layout_below="@+id/btnStart"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="42dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DATA생성"
                        android:id="@+id/btnInsertData"
                        android:layout_alignTop="@+id/btnCreateDatabase"
                        android:layout_centerHorizontal="true" />


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DATA 가져오기"
                        android:id="@+id/btnSelectAllDatas"
                        android:layout_alignTop="@+id/btnInsertData"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.11">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="data"
                        android:id="@+id/tv_Data"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@android:color/black" />




                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/database_test"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:layout_weight="1.10">



                    <ListView
                        android:id="@+id/IvPoses"
                        android:textColor="@android:color/black"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="339dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true">
                    </ListView>

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tv_NowStatus"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textColor="#000000"
                android:textSize="15dp" />

        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>