<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#3f403f"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:background="#08b9aa">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="초기 자세 설정 화면"
            android:id="@+id/setting_textView"
            android:textSize="24dp"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="90dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#404140"
        android:layout_weight="0.01" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="초기 자세를 설정하세요"
        android:id="@+id/myInformation_textview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:enabled="true"
        android:paddingLeft="90dp"
        android:paddingTop="10dp"
        android:paddingBottom="8dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/line" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/pose"
        android:id="@+id/imageView4"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/initial_pose">

        <Button
            android:layout_width="273dp"
            android:layout_height="60dp"
            android:text=""
            android:id="@+id/initposebutton"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:background="@drawable/initial_pose_settingbutton"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="착용위치 :"
            android:id="@+id/poseposition_view"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:textSize="20dp" />

        <RadioGroup
            android:layout_width="246dp"
            android:layout_height="88dp"
            android:orientation="horizontal"
            android:textColor="#000000"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="2dp">




        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="true"
            android:id="@+id/shoulder"
            android:text="어깨"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp" />

        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginTop="25dp"
        android:id="@+id/waist"
        android:text="허리"
            android:textSize="18dp"
        android:textColor="#000000"
            android:layout_marginLeft="10dp" />

        </RadioGroup>
    </FrameLayout>


</LinearLayout>