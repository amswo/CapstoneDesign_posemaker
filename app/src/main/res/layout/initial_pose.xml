<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#3f403f"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:background="#08b9aa">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초기 자세 설정 화면"
            android:id="@+id/setting_textView"
            android:textSize="24dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="95dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#404140"
        android:layout_weight="0.01" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="초기 자세를 설정하세요"
        android:id="@+id/myInformation_textview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:enabled="true"
        android:paddingLeft="90dp"
        android:paddingTop="10dp"
        android:paddingBottom="8dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/line" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/pose"
        android:id="@+id/imageView4" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/initial_pose">

        <Button
            android:layout_width="273dp"
            android:layout_height="60dp"
            android:text=""
            android:id="@+id/initposebutton"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:background="@drawable/initial_pose_settingbutton"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="착용위치 :"
            android:id="@+id/poseposition_view"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="73dp"
            android:paddingTop="200dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="140dp"
            android:checked="true"
            android:id="@+id/shoulder" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어깨"
            android:id="@+id/shoulder_view"
            android:layout_gravity="left|center_vertical"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="25dp" />

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingTop="200dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="0dp"
            android:id="@+id/waist"
            android:layout_marginRight="60dp"
            android:text="허리"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="허리"
            android:id="@+id/waist_view"
            android:layout_gravity="left|center_vertical"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="25dp" />

    </FrameLayout>


</LinearLayout>